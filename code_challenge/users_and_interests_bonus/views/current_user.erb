
  <h2>Current details for: <%= @user_name %></h2>
  <h4>Email address:</h4>
  <p><%= @email %></p>

  <h4>Interests:</h4>
  <% @interests.each do |interest|  %>
    <a href="<%= interest %>"><%= interest %></a>
    <% end %>
  <ul>
    <% @users.each do |name, _| %>
      <% unless name == @user_name %>
        <li><a href="<%= name %>"><%= name %></a></li>
      <% end %>
    <% end %>
  </ul>
